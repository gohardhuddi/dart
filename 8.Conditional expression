void main() {
  //dart condition operator
  
  //condition ? exp1:exp2
  //if condition is true eveluate exp1 and return its value
  //otherwise return exp2
  
  
  var a=1;
  var b=2;
  if(a<b)
  {
    print("$a is smaller");
  }
  else
  {
    print("$b is smaller");
  }
  
  // use dart conditional opr
  a<b ? print("$a is smaller") : print("$b is smaller");
  
  
  // 2. exp1 ?? exp2
  //if ecp 1 is null it will evelute or return 2nd 
  //if first is not null it will eveluate and return 1
  var name=null;
  var nametoprint=name ?? "Guest user";
  print(nametoprint);
}
